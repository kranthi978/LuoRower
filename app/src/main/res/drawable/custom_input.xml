<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_primary_dark"/>
            <corners android:radius="10dp"/>
            <stroke android:color="@color/design_default_color_primary_dark" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_first="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp"/>
            <stroke android:color="@color/black" android:width="1dp"/>
        </shape>
    </item>

</selector>